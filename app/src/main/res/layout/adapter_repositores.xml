<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recyclerView_repositories_items_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:layout_marginTop="1dp"
    android:orientation="horizontal">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/adapter_repositores_txt_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="Username"
            android:textAlignment="center"
            android:textColor="@color/color_repositores_txt_name"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/adapter_repositores_txt_descricao"
            app:layout_constraintTop_toBottomOf="@+id/adapter_repositores_profileImage" />

        <TextView
            android:id="@+id/adapter_repositores_txt_name_repositores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:text="Nome Repositorio"
            android:textColor="@color/color_repositores_txt_name"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/adapter_repositores_txt_descricao"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/adapter_repositores_txt_forks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/adapter_repositores_txt_descricao"
            app:layout_constraintEnd_toStartOf="@+id/adapter_repositores_starImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/adapter_repositores_txt_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/adapter_repositores_txt_descricao"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/adapter_repositores_txt_descricao"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="TextView"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/adapter_repositores_profileImage"
            app:layout_constraintStart_toStartOf="@+id/adapter_repositores_txt_name_repositores" />

        <ImageView
            android:id="@+id/adapter_repositores_profileImage"
            android:layout_width="58dp"
            android:layout_height="62dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/default_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/default_profile" />

        <ImageView
            android:id="@+id/adapter_repositores_forkImage"
            android:layout_width="31dp"
            android:layout_height="19dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/fork"
            app:layout_constraintEnd_toStartOf="@+id/adapter_repositores_txt_forks"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/adapter_repositores_starImage"
            android:layout_width="29dp"
            android:layout_height="19dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/star"
            app:layout_constraintEnd_toStartOf="@+id/adapter_repositores_txt_stars"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>